@model List<Haber.Models.ViewModels.Response.IcerikResponseViewModel>


@if (Model!=null && Model.Any())
{
    <div class="card mb-3">
        <div class="card-header">
            <h3 class="card-title">@Model.FirstOrDefault().Kategori.Label</h3>
        </div>
        <div class="list-group list-group-flush list-group-hoverable">
            @foreach (var item in Model)
            {
                <div class="list-group-item">
                    <div class="row align-items-center">
                        <div class="col-auto"><span class="badge bg-red"></span></div>
                        <div class="col-auto">
                            <a href="/Haber/@item.Id/@item.Slug">
                                <span class="avatar" style="background-image: url(@item.ResimUrl)"></span>
                            </a>
                        </div>
                        <div class="col text-truncate">
                            <a href="/Haber/@item.Id/@item.Slug" class="text-body d-block">@item.Baslik.Substring(0, 75)</a>
                            <small class="d-block text-muted text-truncate mt-n1">
                                @item.Ozet.Substring(0, 150)
                            </small>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>

}