@model List<LMS.Models.ViewModels.KullaniciViewModel>
@{
    ViewData["Title"] = "Kullanicilar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kullanicilar</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Eposta</th>
            <th>Yetki</th>
            <th>Aktif</th>
            <th>Oluşturulma Tarihi</th>
            <th>Güncellenme Tarihi</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Ad</td>
            <td>@item.Soyad</td>
            <td>@item.Eposta</td>
            <td>@item.Yetki</td>
            <td>@item.Aktif</td>
            <td>@item.OlusturulmaTarihi</td>
            <td>@item.GuncellenmeTarihi</td>
            <td><a href="/Yonetici/Kullanici?kullaniciId=@item.Id">Güncelle</a></td>
        </tr>    
        }
        
    
    </tbody>
</table>